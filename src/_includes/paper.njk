---
layout: base
---
<div class="project-container">
    <h3>{{ title }}</h3>
    <div>
        <b>Tools</b>: {{ tools}}
    </div>
    {{ content | safe }}

    <div class="footer-bar">
        {% set previousPost = collections.paper | getPreviousCollectionItem(paper) %}
        {% set nextPost = collections.paper | getNextCollectionItem(paper) %}
        {% if previousPost %}
            <a href="{{previousPost.url}}">Previous paper</a>
        {% endif %}

        <a href="{{url}}" class='cta-btn'>Read full paper: <i class="{{icon}}"></i></a>

        {% if nextPost %}
            <a href="{{nextPost.url}}">Next paper</a>
        {% endif %}
    </div>
</div>

<style>
    .footer-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 1rem;
    }
</style>